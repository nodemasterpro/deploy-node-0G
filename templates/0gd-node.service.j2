[Unit]
Description=0G node
After=network-online.target

[Service]
User={{ ansible_user }}
WorkingDirectory={{ OG_HOME }}
ExecStart={{ ansible_env.HOME }}/go/bin/0gchaind start --home {{ OG_HOME }} --log_output_console
Restart=on-failure
RestartSec=5
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
